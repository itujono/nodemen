<div class="columns is-centered" id="login-page">
    <div class="column is-two-fifths">

        <div class="content">
            <h2 class="title">Selamat Datang!</h2>
            <h5 class="subtitle">Silakan login kalo mau sengsara. Kemaren udah hujan belum ya?</h5>
        </div>

        <form action="" class="form">
            <div class="field">
                <label for="email" class="label">Email kamu</label>
                <div class="control">
                    <input type="email" name="email" class="input" placeholder="jono@gmail.com">
                </div>
            </div>
            <div class="field">
                <label for="password" class="label">Password kamu</label>
                <div class="control">
                    <input type="password" name="password" class="input" placeholder="minimal 6 karakter ya">
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input type="submit" value="Login" class="button is-link">
                    <button class="button is-text">Atau register dulu</button>
                </div>
            </div>
        </form>

    </div>
</div>