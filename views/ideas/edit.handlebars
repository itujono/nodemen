
<section class="hero is-medium is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">Edit Lah Sana</h1>

            <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="field">
                    <label class="label" name="title">Judul</label>
                    <div class="control">
                        <input class="input" type="text" name="title" value="{{idea.title}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label" name="description">Deskripsi</label>
                    <div class="control">
                        <textarea class="textarea" name="description">{{idea.description}}</textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button type="submit" class="button is-link">Submit</button>
                        <a href="/ideas" class="button is-text">Cancel</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>